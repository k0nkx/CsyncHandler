function _G.CsyncMeshScale(x, y, z)
    return Csync:MeshScale(x, y, z)
end

function _G.CsyncMeshOffset(x, y, z)
    return Csync:MeshOffset(x, y, z)
end

function _G.CsyncMeshId(textureId)
    return Csync:ImageId(textureId)
end

